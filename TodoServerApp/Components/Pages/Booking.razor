@page "/booking"
@inject TodoServerApp.Services.BookingService BookingService
@rendermode InteractiveServer

@using TodoServerApp.Models

<h1>Бронирование столиков</h1>

<div class="mb-3 row">
    <div class="col-md-6">
        <label>Дата и время:</label>
        <input type="datetime-local" class="form-control" @bind="selectedDateTime" />
    </div>
</div>

<div class="row mt-3">
    @foreach (var table in tables)
    {
        var isBooked = !BookingService.IsAvailable(table.Id, selectedDateTime);
        <div class="col-md-3 mb-3">
            <div class="card text-center @(isBooked ? "border-danger bg-danger bg-opacity-75 border-3" : "bg-light")">
                <div class="card-body">
                    <h5 class="card-title">@table.Name</h5>
                    <p class="card-text">Мест: @table.Seats</p>
                    <p class="card-text">Статус: @(isBooked ? "Занят" : "Свободен")</p>
                    <div style="@(isBooked ? "cursor: not-allowed !important" : "") ">
                        <button class="btn btn-primary" disabled="@isBooked" @onclick="() => Book(table)">
                            Забронировать
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <input class="form-control form-control-lg" placeholder="Имя клиента" @bind="clientName" />
</div>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">@message</div>
}

@code {
    private List<Table> tables = new();
    private string clientName = "";
    private string message = "";

    private DateTime selectedDateTime = DateTime.Today.AddHours(12);

    protected override void OnInitialized()
    {
        tables = BookingService.GetTables();
    }

    private void Book(Table table)
    {
        if (string.IsNullOrWhiteSpace(clientName))
        {
            message = "Введите имя клиента.";
            return;
        }

        message = BookingService.BookTable(table.Id, clientName, selectedDateTime);
        clientName = "";
    }
}
