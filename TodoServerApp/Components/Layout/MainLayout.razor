@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4" style="background: linear-gradient(to left, #d2b48c, #8b4513);">
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

